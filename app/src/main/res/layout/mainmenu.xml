<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/casino_wallpaper"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/alon_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="Alon's"
        android:layout_alignParentTop="true"
        android:textColor="#2e2e2e"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-10dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bj_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:textColor="#942733"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="BlackJack 21 ♠"
        android:layout_below="@id/alon_tv"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/start"
        android:text="Start♦Game"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/bj_tv"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/hall_btn"
        android:text="Hall of Fame"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/start"
        />
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/setting_cog"
        android:padding="2dp"
        android:id="@+id/cog"
        android:background="@drawable/shape_setting_btn"/>
</RelativeLayout>